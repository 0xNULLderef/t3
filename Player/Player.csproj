<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ApplicationIcon>..\Resources\t3-editor\images\t3.ico</ApplicationIcon>
        <RootNamespace>T3.Player</RootNamespace>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.9.1"/>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Core.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Logging.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Direct3D11.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.DXGI.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Windows.Desktop.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/MsForms.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SystemUi.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/ManagedBass.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Bass.dll"/>
    </ItemGroup>

</Project>