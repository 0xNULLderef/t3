<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ApplicationIcon>..\Resources\t3-editor\images\t3.ico</ApplicationIcon>
        <RootNamespace>T3.Player</RootNamespace>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>
        <TargetFramework>net8.0-windows</TargetFramework>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
        <EnableUnsafeBinaryFormatterSerialization>true</EnableUnsafeBinaryFormatterSerialization>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.9.1"/>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Core.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Logging.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Serialization.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Direct3D11.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Desktop.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.DXGI.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Mathematics.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SystemUi.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/ManagedBass.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/bass.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/MsForms.dll"/>
        <Reference Include="System.Drawing.Common">
          <HintPath>$(ProgramFiles)\dotnet\shared\Microsoft.WindowsDesktop.App\8.0.1\System.Drawing.Common.dll</HintPath>
        </Reference>
        <Reference Include="System.Windows.Forms">
          <HintPath>$(ProgramFiles)\dotnet\shared\Microsoft.WindowsDesktop.App\8.0.1\System.Windows.Forms.dll</HintPath>
        </Reference>
        <Reference Include="Microsoft.VisualBasic.Forms">
            <HintPath>$(ProgramFiles)\dotnet\shared\Microsoft.WindowsDesktop.App\8.0.1\Microsoft.VisualBasic.Forms.dll</HintPath>
        </Reference>
    </ItemGroup>

</Project>