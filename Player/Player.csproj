<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ApplicationIcon>..\Resources\t3-editor\images\t3.ico</ApplicationIcon>
        <RootNamespace>T3.Player</RootNamespace>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>
        <TargetFramework>net8.0-windows</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.9.1"/>
        <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.3">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="System.Drawing.Common" Version="8.0.1" />
        <PackageReference Include="System.Windows.Forms" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Core.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/Logging.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Direct3D11.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Windows.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Desktop.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.DXGI.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SharpDX.Mathematics.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/SystemUi.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/ManagedBass.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/bass.dll"/>
        <Reference Include="$(T3_ASSEMBLY_PATH)/MsForms.dll"/>
    </ItemGroup>

</Project>